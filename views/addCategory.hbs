<div class="row">
  <div class="col-md-12">

    <h2>Add Category</h2>

    <br />

    <form method="post" action="/categories/add">

      <fieldset>
        <legend>Category:</legend>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <input
                class="form-control"
                id="category"
                name="category"
                type="text"
                aria-label="Category"
                autofocus
              />
            </div>
          </div>
        </div>
      </fieldset>
      <br />

      <hr />

      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Add Category"
      /><br /><br /><br />

    </form>
  </div>
</div>